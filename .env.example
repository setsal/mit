# LLM Provider Configuration
# Options: "openai" (default), "azure", or "gemini"
LLM_PROVIDER=openai

# OpenAI Configuration (if LLM_PROVIDER=openai)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
# OPENAI_BASE_URL=  # Optional: for custom endpoints (e.g., local LLM)

# Google Gemini Configuration (if LLM_PROVIDER=gemini)
# GOOGLE_API_KEY=your-google-api-key
# GEMINI_MODEL=gemini-2.5-flash
# GEMINI_EMBEDDING_MODEL=gemini-embedding-001

# Azure OpenAI Configuration (if LLM_PROVIDER=azure)
# AZURE_OPENAI_API_KEY=your-azure-api-key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT=gpt-4
# AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002
# AZURE_OPENAI_API_VERSION=2024-02-01

# ChromaDB Configuration
CHROMADB_PERSIST_DIR=./data/rag/chroma_db

# Logging Configuration
MIT_LOG_LEVEL=INFO
